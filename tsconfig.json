{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "lib": ["dom", "es2015", "es2017"],
        "noEmitOnError": true,
        "plugins": [
            {
                "name": "typescript-styled-plugin"
            }
        ]
    },
    "include": [
        "./src/**/*"
    ]
}